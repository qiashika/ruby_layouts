<h1>Bill History</h1>
<table class="table table-striped ml-4 " style="max-width: 15rem;">
<thead class="thead-dark">
    <tr>
        <th>Doctor Name</th>
        <th>Pateint Name</th>
        <th>Payment Status</th>
        <th>Action</th>
        <th>Action</th>
        <th>Action</th>
    </tr>
</thead>

    <% @bills.each do |bill| %>
        <tr>
            <td><%= bill.doctor.name %></td>
            <td><%= bill.patient.patient_name %></td>
            <td><%= bill.payment_status %></td>
            <td><%= link_to "View", bill_path(bill) %></td>
            <td><%= button_to "Edit", edit_bill_path(bill), method: 'get' %></td>
            <td><%= button_to "Delete", bill_path(bill), method: 'delete', data: {turbo_confirm: 'Are you Sure?'} %></td> 
        </tr>
    <% end %>
</table>

<%= link_to "Generate Bill", new_bill_path %>