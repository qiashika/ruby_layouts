<h1 style="margin: 1%;border-bottom: 1px solid;max-width: 25%"><i>Appointments List</i></h3>
<table class="table table-striped ml-4 " style="margin:1%; max-width: 50%">
<thead class="thead-dark" style="color: blue">
    <tr>
        <th>Doctors Name</th>
        <th>Patients Name</th>
        <th>Date Time</th>
        <th>Action</th>
        <th>Action</th>
        <th>Action</th>
    </tr>
</thead>

    <% @appointments.each do |apt| %>
        <tr>
            <td><%= apt.doctor.name %></td>
            <td><%= apt.patient.patient_name %></td>
            <td><%= apt.appointment_datetime %></td>
            <td><%= link_to "View", appointment_path(apt) %></td>
            <td><%= button_to "Edit", edit_appointment_path(apt), method: 'get' %></td>
            <td><%= button_to "Delete", appointment_path(apt), method: 'delete', data: {turbo_confirm: 'Are you Sure?'} %></td> 
        </tr>
    <% end %>
</table>
<div style="margin: 1%">
    <%= link_to "Add Appointment", new_appointment_path %>
</div>