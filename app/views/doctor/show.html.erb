<h3 style="margin: 1%;border-bottom: 1px solid;max-width: 25%"><i><%= @doctor.name %></i></h3>
<table border class="table table-sm table-striped ml-4 " style="margin:1%; max-width: 50%">
<thead class="thead-dark">
  <tr>
    <th>Specialism</th>
    <th>Cost</th>
  </tr>
  <tr>
    <td><%= @doctor.specialism %></td>
    <td><%= @doctor.cost %></td>
  </tr>
</table>
<h3 style="margin: 1%"><i>Appointment Details</i></h3>
<table border class="table table-sm table-striped ml-4 " style="margin:1%; max-width: 50%">
<thead class="thead-dark">
  <tr>
    <th>Patient Name</th>
    <th>Contact</th>
    <th>Appontment Date</th>
  </tr>
  <tr>
    <% @doctor.appointments.each do |a|%>
      <td><%= a.patient.patient_name %></td>
      <td><%= a.patient.phone_number %></td>
      <td><%= a.appointment_datetime %></td>
    <% end %>
  </tr>
</table>